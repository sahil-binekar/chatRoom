<%= form_with(model: @room, remote: true, class: "d-flex" , data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
  <%= f.text_field :name, class: "form-control bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-30 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500", autocomplete: 'off' %>
  <%= f.submit data: { disable_with: false }, class:"shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
<% end %>